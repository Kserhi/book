<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #FAFF0D;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.addressbook.HelloController">

    <children>
        <HBox prefHeight="80.0" prefWidth="570.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="0.0">

            <children>
                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#showDialog" prefHeight="40.0" prefWidth="140.0"
                        style="-fx-background-color: #FEC351;" text="Добавити">

                    <HBox.margin>
                        <Insets top="30.0"/>
                    </HBox.margin>
                </Button>

                <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0"
                        style="-fx-background-color: #FEC351;" text="Редагувати">

                    <HBox.margin>
                        <Insets left="75.0" right="75.0" top="30.0"/>
                    </HBox.margin>
                </Button>

                <Button   mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0"
                        style="-fx-background-color: #FEC351;" text="Видалити"
                onAction="#new_Alert">

                    <HBox.margin>
                        <Insets top="30.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>

        <AnchorPane layoutX="7.0" layoutY="120.0" prefHeight="50.0" prefWidth="600.0" AnchorPane.leftAnchor="30.0"
                    AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="100.0">

            <children>
                <TextField layoutY="7.0" prefHeight="40.0" prefWidth="383.0" promptText="Дані про користувача"
                           style="-fx-background-color: #D9D9D9;" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="157.0"/>

                <Button layoutX="460.0" layoutY="7.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0"
                        style="-fx-background-color: #FEC351;" text="Пошук" AnchorPane.rightAnchor="0.0"/>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="7.0" layoutY="237.0" prefHeight="195.0" prefWidth="600.0" AnchorPane.bottomAnchor="50.0"
                    AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="160.0">

            <children>
                <TableView prefHeight="195.0" prefWidth="564.0" style="-fx-background-color: #D9D9D9;"
                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                           AnchorPane.topAnchor="0.0">

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn text="ПІП"/>
                        <TableColumn text="Телефон"/>
                    </columns>
                </TableView>

            </children>
        </AnchorPane>

        <AnchorPane layoutX="14.0" layoutY="439.0" prefHeight="47.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="30.0">

            <children>
                <Label  layoutX="14.0" layoutY="15.0" text="Кількість записів:"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
